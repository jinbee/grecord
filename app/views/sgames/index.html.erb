<div class="container">

	<div class="row">
	    

    	<div class="col-sm-6 col-sm-offset-3">
             <div class="text-center">
               <%= link_to 'ゲーム追加' , new_sgame_path , class: "btn btn-primary btn-block" %>
             </div> 
    	</div>

        <h2 class="section-title"></h2>

		<div class="col-sm-10 col-sm-offset-1">
 

            <% if notice %>
              <div class="alert alert-info" role="alert">
                <i class="fa fa-check" aria-hidden="true"></i>
                <%= notice %>
              </div>
            <% end %>

            <table class="table table-striped">
              <tr><th class="col-xs-7">Title</th><th></th><th></th></tr>   
              <% @sgames.each do |g| %>
                 <tr>
                   <td><%= g.gname %></td>
                   <% if g.status == 'true'%>
                    <td><%= link_to '課金中' , toggle_sgame_path(g.id) , class: "btn btn-info active" %></td>
                      <% else %>
                    <td><%= link_to '課金停止中' , toggle_sgame_path(g.id) , class: "btn btn-info" %></td>  
                   <% end %>
                   <td>
                       <%= link_to '編集' , edit_sgame_path(g.id) , class: "btn btn-link active"%>
                      <%= link_to '削除' , sgame_path(g.id),method: :delete,data:{confirm:'削除しますか?'} , class: "btn btn-link"%>
                   </td>
               </tr>
             <% end %>
            </table>
       </div>
   </div>
</div>